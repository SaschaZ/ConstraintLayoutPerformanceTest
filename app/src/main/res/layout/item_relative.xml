<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="ContentDescription,HardcodedText">

    <ImageView
        android:id="@+id/shout_grid_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@android:color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_03" />

    <TextView
        android:id="@+id/shout_grid_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/shout_grid_image_view"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/shout_grid_image_view"
        android:text="Merino Wool Slouchy Hat, Winter"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/shout_grid_title_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/shout_grid_title_tv"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/shout_grid_image_view"
        android:text="Hat, Chunky Textured Knit Ht"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/home_feed_card_user_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_below="@id/shout_grid_title_tv2"
        android:layout_toEndOf="@+id/shout_grid_image_view"
        android:text="John Smith - 2 hours ago"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/home_feed_card_type_label_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/home_feed_card_user_tv"
        android:layout_alignParentEnd="true"
        android:text="Offer"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/home_feed_card_country_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shout_grid_image_view"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toEndOf="@+id/shout_grid_image_view"
        android:padding="6dp"
        android:src="@drawable/ic_chat" />

    <ImageView
        android:id="@+id/home_feed_card_item_icon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shout_grid_image_view"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/home_feed_card_country_iv"
        android:padding="6dp"
        android:src="@drawable/ic_star"
        android:tint="@color/colorPrimary" />

    <ImageView
        android:id="@+id/home_feed_card_chat_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shout_grid_image_view"
        android:layout_toEndOf="@+id/home_feed_card_item_icon_iv"
        android:layout_marginStart="8dp"
        android:padding="6dp"
        android:src="@drawable/ic_info"
        android:tint="@color/colorAccent" />

    <TextView
        android:id="@+id/shout_grid_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/shout_grid_image_view"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/home_feed_card_chat_iv"
        android:gravity="end"
        android:maxLines="1"
        android:paddingBottom="2dp"
        android:text="$100USD"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

</RelativeLayout>