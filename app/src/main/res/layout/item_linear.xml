<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:orientation="horizontal"
    tools:ignore="ContentDescription,HardcodedText">

    <ImageView
        android:id="@+id/shout_grid_image_view"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="16dp"
        android:background="@android:color/black"
        android:scaleType="centerCrop"
        android:src="@drawable/sample_03" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shout_grid_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merino Wool Slouchy Hat, Winter"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shout_grid_title_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hat, Chunky Textured Knit Ht"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home_feed_card_user_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Smith - 2 hours ago"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/home_feed_card_country_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:padding="6dp"
                android:src="@drawable/ic_chat" />

            <ImageView
                android:id="@+id/home_feed_card_item_icon_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:padding="6dp"
                android:src="@drawable/ic_star"
                android:tint="@color/colorPrimary" />

            <ImageView
                android:id="@+id/home_feed_card_chat_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:padding="6dp"
                android:src="@drawable/ic_info"
                android:tint="@color/colorAccent" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical|end">

        <TextView
            android:id="@+id/home_feed_card_type_label_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="2"
            android:gravity="center_vertical|end"
            android:text="Offer"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/shout_grid_price_tv"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="bottom|end"
            android:maxLines="1"
            android:text="$100USD"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>